<h1>Games#new</h1>
<ul class= "list-inline text-center">
  <% @letters.each do |element| %>
    <li class= "btn btn-primary text-center">
      <%= element %>
    </li>
  <% end %>
</ul>
<p>What is the longest word you can find?</p>

<form action="/score" method="POST" class="form-inline" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="name" placeholder="Name" >
  <input type="submit" value="play" class = "btn btn-primary">
</form>
